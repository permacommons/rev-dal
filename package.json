{
  "name": "rev-dal",
  "version": "0.1.0",
  "type": "module",
  "engines": {
    "node": ">=22"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./lib/*": {
      "types": "./dist/lib/*.d.ts",
      "import": "./dist/lib/*.js"
    },
    "./setup-db-grants.sql": "./setup-db-grants.sql"
  },
  "files": [
    "dist",
    "setup-db-grants.sql",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "lint": "biome check .",
    "lint:fix": "biome check --write .",
    "prepare": "npm run build",
    "test": "node --import tsx --test --test-concurrency=1 test/**/*.test.ts",
    "test:types": "tsc -p tsconfig.type-tests.json --noEmit",
    "typecheck": "tsc -p tsconfig.json --noEmit"
  },
  "dependencies": {
    "entities": "^1.1.2",
    "is-uuid": "^1.0.2",
    "pg": "^8.17.0",
    "striptags": "^3.2.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.13",
    "@types/node": "^22.10.1",
    "@types/pg": "^8.15.6",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
